<div class=''>
  <legend>Billing Form</Bill>
 <h4><img src="http://www.gravatar.com/avatar/{{= it.user.github_avatar_url }}?s=40" class='avatar'  />{{! it.user.github_username }}</h4>
  <form method='POST' action='{{= it.create_bills }}'>
    <div class='row-fluid'>
      <div class='span12'>
        <div class='controls-row'>
          <input type='text' class='span6' name='bill[amount]' placeholder="Amount" required />
	</div>	
	<div class='controls-row'>
          <input type='text' class='span6' name='bill[description]' placeholder="Description of Bill" required />  
        </div>     
        <div class='controls-row'>
           <input type='hidden' class='span6' name='bill[userid]' value='{{= it.user._id }}' >
          <button type='submit' class="btn btn-primary pull-left">Issue bill</button>
        </div>    
      </div>
    </div>
  </form>
</div>
