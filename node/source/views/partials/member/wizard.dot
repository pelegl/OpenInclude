<div id="step-1" class='tos'>
    <div class="content">Lorem ipsum - terms of service</div>
    <div class="controls">
        <button class="btn btn-danger pull-left close-inline">Cancel</button>
        <button class="btn btn-primary next pull-left" rel="step-2">I agree</button>
    </div>
</div>

<div id="step-2" class='tos' style="display: none">
    <div class="content">Lorem ipsum - terms of payment - terms of payment</div>
    <div class="controls">
        <button class="btn btn-danger pull-left close-inline">Cancel</button>
        <button class="btn btn-primary next pull-left" rel="step-3">I agree</button>
    </div>
</div>

<div id="step-3" style="display: none" class='paymentInfo'>
    <div class="content">
        {{? it.wizard_reader }}
        <form role="menu" method='post' action='{{=it.update_credit_card}}'>
            <legend>Payment Information - Credit Card</legend>
            <div class='row-fluid'>
                <div class='span12'>
                    <div class='controls-row'>
                        <input type='text' class='span3' name='card[givenName]' placeholder="First Name"  />
                        <input type='text' class='span3' name='card[lastName]' placeholder="Last Name"  />
                    </div>
                    <div class='controls-row'>
                        <input type='text' id='ccNumber' class='span6' name='card[number]' placeholder="Card Number" />
                    </div>
                    <div class='controls-row'>
                        <input type='text' id='ccExpiration' class='span3' name='card[expiration]' placeholder="MM/YYYY" />
                        <input type='text' id='ccCVV' class='span3'  name='card[cvv]' placeholder="CVV" />
                    </div>
                    <div class='controls-row'>
                        <button class="btn btn-danger pull-left close-inline">Cancel</button>
                        <button type='submit' class="btn btn-primary pull-left">Confirm</button>
                    </div>
                </div>
            </div>
        </form>
        {{??}}
        <form method="post" action="/profile/update_paypal">
            <legend>Payment Information - Paypal</legend>
            <input type="text" name="paypal" placeholder="Paypal email" />
            <div class='controls-row'>
                <button class="btn btn-danger pull-left close-inline">Cancel</button>
                <button type='submit' class="btn btn-primary pull-left">Confirm</button>
            </div>
        </form>
        {{?}}
    </div>
</div>