<form method='post' action='' class='inline-popover'>

    <label for="skills-autocomplete">{{? it.type == "reader" }}Skills I'm looking for:{{??}}Skills I have:{{?}}</label>
        <input type="text" id="skills-autocomplete" class="input-block-level" placeholder="Start typing and then select skill from provided list" autocomplete="off" />

    <input type="hidden" name="skill-list" />
    <input type="hidden" name="type" value="{{= it.type }}" />

    <div id="skill-list"></div>

    <label for="about">About me:</label>
    <textarea id="about" name="about" class="input-block-level"></textarea>

    <label for="about">Links:</label>
    <textarea id="about" name="links" class="input-block-level"></textarea>

    <div>
        <a class="btn pull-left close-inline">Close</a>
        <button type='submit' class="btn btn-primary pull-left" style='margin-left: 20px'>Confirm</button>
    </div>

</form>