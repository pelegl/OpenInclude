<div class="container blog">
    <h1>OpenInclude Blog</h1>
    <div class='row'>
        <div class='span9'>

            {{~ it.posts :post }}
            <article class='blog-post'>
                <header class='clearfix'>
                    <h2><a href="/blog/view/{{= post._id }}" class='title' data-nobackbone >{{= post.title }}</a></h2>
                    <time>{{= it.moment(post.date).format("LL") }}</time>
                    <a class='author' href='#'>
                        <img alt='AP' /> author placeholder
                    </a>
                </header>
                <section class='body'>
                    {{= post.htmlContent }}
                </section>
            </article>
            {{~}}

            <div class="pagination center">
                <ul>
                    {{? it.page > 1 }}
                    <li><a href="/blog/index/{{= it.page - 1 }}" data-nobackbone >&laquo;</a></li>
                    {{?}}
                    {{ for (i = 1; i <= it.limit; i++) { }}
                    <li {{? i == it.page }}class="active"{{?}}><a href="/blog/index/{{= i }}" data-nobackbone >{{= i }}</a></li>
                    {{ } }}
                    {{? it.page < it.limit }}
                    <li><a href="/blog/index/{{= it.page + 1 }}" data-nobackbone >&raquo;</a></li>
                    {{?}}
                </ul>
            </div>

        </div>
    </div>
</div>